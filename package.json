{
  "name": "nevadacaldwell.com",
  "version": "1.1.0",
  "description": "Personal actor website for Nevada Caldwell.",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all clean build:assets build:11ty --parallel serve watch:*",
    "clean": "rm -rf _site",
    "build": "run-s build:assets build:11ty build:purgecss",
    "prebuild": "npm run clean",
    "build:assets": "mkdir _site && run-p build:assets:*",
    "build:assets:css": "postcss _assets/css/index.css -o _site/assets/styles.css",
    "build:assets:js": "webpack _assets/javascript/main.js -o _site/assets/bundle.js",
    "build:assets:images": "node imagemin.images.js",
    "build:assets:pdf": "mkdir -p _site/assets/pdf && cp -R _assets/pdf/* _site/assets/pdf",
    "build:assets:favicons": "cp _assets/favicons/* _site",
    "build:purgecss": "purgecss -c purgecss.config.js -o _site/assets",
    "build:11ty:serve": "npx eleventy --serve",
    "build:11ty": "npx eleventy",
    "watch:css": "chokidar '_assets/css/**/*' 'tailwind.js' --command 'run-s build:assets:css browsersync:reload'",
    "watch:js": "chokidar '_assets/javascript/*' --command 'run-s build:assets:js browsersync:reload'",
    "watch:images": "chokidar '_assets/images/**/*' --command 'run-s build:assets:images browsersync:reload'",
    "watch:svg": "chokidar '_assets/svg/**/*.svg' --command 'run-s build:svg build:11ty:serve browsersync:reload'",
    "watch:11ty": "chokidar '*.html' '*.md' '_includes/*' '_data/*.json' --command 'run-s build:11ty browsersync:reload'",
    "serve": "browser-sync '_site' --port 4000 --no-notify",
    "browsersync:reload": "browser-sync reload --port 4000",
    "browsersync:stream": "browser-sync reload --port 4000 --files='assets/styles.css'"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "smooth-scroll": "cferdinandi/smooth-scroll"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.7.1",
    "autoprefixer": "^9.4.9",
    "browser-sync": "^2.26.3",
    "chokidar": "^2.1.2",
    "chokidar-cli": "^1.2.2",
    "cssnano": "^4.1.10",
    "imagemin": "^6.1.0",
    "imagemin-cli": "^4.0.0",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^7.0.0",
    "imagemin-svgo": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2",
    "postcss-import": "^12.0.1",
    "precss": "^4.0.0",
    "purgecss": "^1.1.0",
    "svg-sprite": "^1.5.0",
    "tailwindcss": "^0.7.4",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3"
  }
}
